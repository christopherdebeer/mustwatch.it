include includes/nav
.darkWrapper
	.container
		.row
			- if (video.provider === "youtube")
				iframe(width="1280", height="720", src="http://www.youtube.com/embed/#{video.id}", frameborder="0", webkitAllowFullScreen, mozallowfullscreen, allowFullScreen)
			- if (video.provider === "vimeo")
				iframe(src="http://player.vimeo.com/video/#{video.id}?color=ff9933", width="1280", height="719", frameborder="0", webkitAllowFullScreen, mozallowfullscreen, allowFullScreen)
div.container
	div#videoMeta.row
		div#info.span6
			img.videoThumbnail(src="#{video.thumbnail}")
			h1 #{video.title}
			p.sourceWrapper Saved from:&nbsp;
				a.source(href="#{video.source}") #{video.source}
			div.socialInfo 
				- if (video.score > 1)
					span.badge #{video.score}
					| &nbsp;mustwatchers 
				- if (video.score === 1)
						span.badge #{video.score}
						| &nbsp;mustwatchers
				a(href="https://twitter.com/share", class="twitter-share-button", data-text="Check out this video", data-via="mustwatchit", data-related="mustwatchit", data-hashtags="mustwatchit", data-dnt="true") Tweet Video
				div.fb-like(data-href="http://www.mustwatch.it/video/#{video.provider}/#{video.id}", data-send="true", data-layout="button_count", data-width="300", data-show-faces="true")
				script
					!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
			.buttons
				- if (req.loggedIn)
					- if (!hasVideo)
						a.btn.btn-large.btn-warning.addVideo(href="#", title="Add this video to your account", data-id="#{video.id}", data-provider="#{video.provider}") Add to your Videos
						a.btn.hidden.btn-large.btn-warning.markAsWatched(href="#", title="Mark as watched", data-id="#{video.id}", data-provider="#{video.provider}") Mark as watched
						a.btn.hidden.btn-large.btn-warning.markAsUnwatched(href="#", title="Mark as unwatched", data-id="#{video.id}", data-provider="#{video.provider}") Mark as unwatched
					- if (hasVideo && video.watched) 
						a.btn.hidden.btn-large.btn-warning.addVideo(href="#", title="Add this video to your account", data-id="#{video.id}", data-provider="#{video.provider}") Add to your Videos
						a.btn.hidden.btn-large.btn-warning.markAsWatched(href="#", title="Mark as watched", data-id="#{video.id}", data-provider="#{video.provider}") Mark as watched
						a.btn.btn-large.btn-warning.markAsUnwatched(href="#", title="Mark as unwatched", data-id="#{video.id}", data-provider="#{video.provider}") Mark as unwatched
					- else if (hasVideo && !video.watched)
						a.btn.btn-large.btn-warning.addVideo(href="#", title="Add this video to your account", data-id="#{video.id}", data-provider="#{video.provider}") Add to your Videos
						a.btn.btn-large.btn-warning.markAsWatched(href="#", title="Mark as watched", data-id="#{video.id}", data-provider="#{video.provider}") Mark as watched
						a.btn.hidden.btn-large.btn-warning.markAsUnwatched(href="#", title="Mark as unwatched", data-id="#{video.id}", data-provider="#{video.provider}") Mark as unwatched
				- else
					p Create an account or log in for more options.


